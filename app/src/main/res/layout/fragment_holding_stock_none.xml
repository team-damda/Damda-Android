<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HoldingStockNone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imgview_app_nonestock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_stock_none_48dp"
            android:contentDescription="@string/app_nonestock"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="72dp"
            />
        <TextView
            android:id="@+id/txtview_app_nonestock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_nonestock"
            android:textColor="@color/warm_grey"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/imgview_app_nonestock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/txtview_app_nonestockadvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_nonestockadvice"
            android:textColor="@color/warm_grey"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_app_nonestock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="86dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>