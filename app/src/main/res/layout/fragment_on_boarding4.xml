<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_onboarding_ovalwrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        >
        <View
            android:id="@+id/view_onboarding_oval1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:backgroundTint="@color/grey_300"
            android:background="@drawable/bg_oval"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            />
        <View
            android:id="@+id/view_onboarding_oval2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:backgroundTint="@color/grey_300"
            android:background="@drawable/bg_oval"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_onboarding_oval1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            />
        <View
            android:id="@+id/view_onboarding_oval3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:backgroundTint="@color/grey_300"
            android:background="@drawable/bg_oval"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_onboarding_oval2"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            />
        <View
            android:id="@+id/view_onboarding_oval4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:backgroundTint="@color/dusty_orange"
            android:background="@drawable/bg_oval"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_onboarding_oval3"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_onboarding_ovalwrapper"
        app:srcCompat="@drawable/ic_tutorial_last" />


    <TextView
        android:id="@+id/textView11"
        style="@style/Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:text="주식과 재미를,"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        style="@style/Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="담다와 함께"
        android:textColor="@color/dusty_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        style="@style/Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작하세요!"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="시작하기"
        style="@style/Bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>