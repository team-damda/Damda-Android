<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/app_listitem_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="12dp"
        android:paddingStart="28dp"
        android:paddingLeft="28dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        >

        <TextView
            android:id="@+id/txtview_main_markettype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/main_markettype"
            android:textColor="@color/grey_959595"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        />
        <TextView
            android:id="@+id/txtview_main_stockcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/main_stockcode"
            android:textColor="@color/grey_959595"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/txtview_main_markettype"
            app:layout_constraintBottom_toBottomOf="@+id/txtview_main_markettype"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/txtview_main_stockname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:text="@string/main_stockname"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/txtview_main_markettype"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/txtview_wallet_transcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/wallet_transcontent"
            android:textColor="@color/grey_959595"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtview_wallet_transtime"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/txtview_wallet_transtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/wallet_transtime"
            android:textColor="@color/grey_959595"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="@+id/txtview_wallet_transcontent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/txtview_main_stockprice"
            android:textSize="16sp"
            android:text="@string/main_stockprice"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txtview_main_stockname"
            />
        <TextView
            android:id="@+id/txtview_main_stocktotprice"
            android:textSize="12sp"
            android:textColor="@color/red_E6504F"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_stocktotprice"
            app:layout_constraintEnd_toStartOf="@+id/txtview_main_stockpercent"
            app:layout_constraintBottom_toBottomOf="@+id/txtview_main_stockpercent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            />
        <TextView
            android:id="@+id/txtview_main_stockpercent"
            android:textSize="12sp"
            android:textColor="@color/red_E6504F"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_stockpercent"
            app:layout_constraintTop_toBottomOf="@+id/txtview_main_stockprice"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>