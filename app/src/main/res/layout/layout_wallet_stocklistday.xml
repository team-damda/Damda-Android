<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_listitem_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        android:paddingEnd="20dp"
        android:paddingStart="28dp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        >
        <View
            android:id="@+id/view_wallet_orangecircle"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_oval"
            android:backgroundTint="@color/dusty_orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/txtview_wallet_transday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_transday"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_wallet_orangecircle"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:id="@+id/txtview_wallet_valloss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_vallos"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/txtview_wallet_vallossmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_vallossmoney"
            android:textColor="@color/pastel_red"
            android:textSize="12sp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/txtview_wallet_valloss"
            app:layout_constraintEnd_toEndOf="@+id/txtview_wallet_valloss"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

