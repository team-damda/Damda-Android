<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!--  Font style.  -->
        <style name="Bold">
            <item name="fontFamily">@font/noto_sans_kr_bold</item>
            <item name="android:includeFontPadding">false</item>
        </style>

        <style name="Medium">
            <item name="fontFamily">@font/noto_sans_kr_medium</item>
            <item name="android:includeFontPadding">false</item>
        </style>

        <style name="Regular">
            <item name="fontFamily">@font/noto_sans_kr_regular</item>
            <item name="android:includeFontPadding">false</item>
        </style>

        <style name="Light">
            <item name="fontFamily">@font/noto_sans_kr_light</item>
            <item name="android:includeFontPadding">false</item>
        </style>

    <!--  Graph, Selling & Buying style.  -->
    <style name="Warm_grey_Medium">
        <item name="fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="Black_Bold">
        <item name="fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Black_Medium">
        <item name="fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Brownish_grey_Medium">
        <item name="fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="White_Bold">
        <item name="fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  EditText style.  -->
    <style name="EditTextTextStyle"
        parent="Widget.AppCompat.EditText" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Bold.EditTextTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dusty_orange</item>
    </style>

    <!--  Button style.  -->
    <style name="Bold.ButtonTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  TextView style.  -->
    <style name="Bold.BlackTitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Bold.WhiteTitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Bold.WhiteSmallTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>