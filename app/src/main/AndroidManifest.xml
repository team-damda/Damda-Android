<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.etwoitwo.damda">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Damda"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".feature.common.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.onboarding.OnBoardingActivity" />
        <activity android:name=".feature.search.SearchListActivity" />
        <activity android:name=".feature.sign.SignInActivity" />
        <activity android:name=".feature.sign.SignUpActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".feature.graph.GraphActivity"/>
        <activity android:name=".feature.graph.BuyingActivity"/>
        <activity android:name=".feature.graph.SellingActivity"/>
        <activity android:name=".feature.onboarding.CalendarActivity"/>
    </application>

</manifest>